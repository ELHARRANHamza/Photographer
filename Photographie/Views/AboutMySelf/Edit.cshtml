@model Photographie.ViewModel.AboutMySelf

@{
    ViewData["Title"] = "Edit";
}

    <div class="container" style="margin-top:80px">
        @if (Model.nom == null)
        {
            <h1 class="alert alert-primary">
                Add Your Information
            </h1>
        }
        @if (Model.nom != null)
        {
    <h1 class="alert alert-primary">
        Are you sure you want to Edit this?
    </h1>
        }
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="nom" class="control-label"></label>
                        <input asp-for="nom" class="form-control" />
                        <span asp-validation-for="nom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="prenom" class="control-label"></label>
                        <input asp-for="prenom" class="form-control" />
                        <span asp-validation-for="prenom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="8">
</textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="file" class="control-label"></label>
                        @if (Model.Image_ != null)
                        {
                        <br/>
                        <img src="~/MyImage/@Model.Image_" class="img-fluid" style="width:250px;height:250px;border-radius:50%">
                        }
                        <input asp-for="file" name="file" class="form-control" />
                        <span asp-validation-for="file" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-success-outline">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


@model Photographie.Models.Photo_

@{
    ViewData["Title"] = "Details";
}

<div class="container" style="margin-top:80px">
    <h1 class="alert alert-primary">Details Your Protfolion</h1>
    <div class="row">
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt>
                    Image
                </dt>
                <dd>
                    <br />
                    <img src="~/MyProtfolio/@Model.Image_" class="img-fluid" style="width:250px;height:250px;border-radius:50%">
                </dd>
            </dl>
            <div class="form-group">
                <div class="row">
                    <a class="btn btn-primary" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                    <a asp-action="Index" class="btn btn-primary-outline">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
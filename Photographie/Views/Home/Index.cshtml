@model Photographie.ViewModel.HomeViewModel

@{
    int cp = 0;
}
<section class="cid-rb9ZtbOCw6 mbr-parallax-background" id="header1-0">




    <div class="container text-center" data-stellar-background-ratio=".5">
        <div class="row slider-wrapper">
            <div class="col-md-12">
                <div class="slider-text  slider-text-two">
                    <h2 class="mbr-section-title mbr-fonts-style mbr-bold align-center display-7"><span style="font-weight: normal;">Hello ! Welcome To My Site</span></h2>
                    <h4 class="mbr-text mbr-fonts-style align-center display-1"><strong>@Model.users.nom @Model.users.prenom. The photographer</strong></h4><h4>
                    </h4>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="mbr-gallery mbr-slider-carousel cid-rba0NabUEs" id="gallery2-4">


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-10">
                <h2 class="mbr-section-title mbr-fonts-styl align-center display-2">Little Fluffy Clouds Project</h2>


            </div>
        </div>
    </div>

    <div>
        <div class="pt-5">
            <!-- Filter --><!-- Gallery -->
            <div class="mbr-gallery-row">
                <div class="mbr-gallery-layout-default">
                    <div>
                        <div>
                            @foreach (var item in Model.GetPhotos)
                            {
                                cp++;
                                <div class="mbr-gallery-item mbr-gallery-item--p1" data-video-url="false" data-tags="Awesome">
                                    <div href="#lb-gallery2-4" data-slide-to="@cp" data-toggle="modal">
                                        <img src="~/MyProtfolio/@item.Image_" style="width:360px;height:270px;" alt="" title="">
                                        <span class="icon-focus"></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
            <!-- Lightbox -->
            <div data-app-prevent-settings="" class="mbr-slider modal fade carousel slide" tabindex="-1" data-keyboard="true" data-interval="false" id="lb-gallery2-4">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/assets/images/paulo-ferreira-197101-unsplash-2000x1333.jpg" style="width:2000px;height:1333px" alt="" title="">
                                </div>
                                @foreach (var item in Model.GetPhotos)
                                {
                                    <div class="carousel-item">
                                        <img src="~/MyProtfolio/@item.Image_" alt="" title=""/>
                                    </div>
                                }

                            </div>
                            <a class="carousel-control carousel-control-prev" role="button" data-slide="prev" href="#lb-gallery2-4">
                                <span class="mbri-left mbr-iconfont" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control carousel-control-next" role="button" data-slide="next" href="#lb-gallery2-4">
                                <span class="mbri-right mbr-iconfont" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                            <a class="close" href="#" role="button" data-dismiss="modal">
                                <span class="sr-only">Close</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="cid-rba0ILMWXs" id="header5-2">




    <div class="container text-center" data-stellar-background-ratio=".5">
        <div class="row">
            <div class="col-md-7">
                <div class="slider-text-two">
                    <h2 class="mbr-section-title mbr-fonts-style mbr-bold align-center display-1">
                        HELLO
                    </h2>
                    <h3 class="mbr-section-subtitle mbr-fonts-style align-center display-5">
                        I'm @Model.users.nom. I am a photographer
                    </h3><h3>
                    </h3>
                    <h4 class="mbr-text mbr-fonts-style align-center display-7">
                        @Model.users.AboutMySelf
                    </h4>
                    <div class="mbr-section-btn"><a class="btn-primary btn btn-md display-4" type="submit" href="index.html#form2-7">HIRE ME</a></div>
                </div>
            </div>
        </div>
    </div>

</section>

<section class="cid-rba55l8Kyl" id="form2-7">




    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-sm-12">
                <h2 class="mbr-fonts-style mbr-section-heading display-2">
                    Get in touch
                </h2>
                <div data-form-alert="" hidden="">Thanks for filling out the form!</div>
                <form asp-action="Create">
                    <div class="row input-main">
                            <div class="col-md-6 input-wrap" data-for="name">
                                <input type="text" class="field display-7" asp-for="Nom"  data-form-field="Name" placeholder="Name*" required="" id="name-form2-7">
                            </div>
                            <div class="col-md-6 input-wrap" data-for="email">
                                <input type="text" class="field display-7" asp-for="Prenom"  data-form-field="prenom" placeholder="Latest Name*" required="" id="prenom-form2-7">

                            </div>
                        </div>
                        <div class="row input-main">
                            <div class="col-md-6 input-wrap" data-for="email">
                                <input type="email" class="field display-7" asp-for="Email"  data-form-field="Email" placeholder="Email*" required="" id="email-form2-7">
                            </div>
                            <div class="col-md-6 input-wrap" data-for="subject">
                                <input type="text" class="field display-7" asp-for="Subject" data-form-field="Subject" placeholder="Subject" id="sujbect-form2-7">
                            </div>
                        </div>
                        <div class="form-group" data-for="message">
                            <textarea type="text" class="form-control display-7"  name="Message" rows="7" placeholder="Message*" data-form-field="Message" id="message-form2-7"></textarea>
                        </div>
                    <span class="input-group-btn">
                            <button type="submit" class="btn btn-form btn-primary display-4">SEND</button>
                        </span>

                </form>
            </div>
        </div>
    </div>
    
</section>